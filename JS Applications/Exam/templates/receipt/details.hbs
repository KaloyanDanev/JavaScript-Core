{{> header}}
<div class="row form-layout p-5">
    <div class="col-md-12">
        <div class="recepieInfo">
            <div class="detailsFoodImage">
                <img src="{{imageURL}}"
                     alt="">
            </div>

            <div class="infoPack">
                <h3 class="my-3">{{meal}}</h3>
                <p class="prep-method">{{prepMethod}}</p>
                <p class="description">{{description}}</p>
            </div>
            <div class="actions">
                <a class="btn btn-danger" href="#/delete/{{_id}}">Archive</a>
                <a class="btn btn-info" href="#/edit/{{_id}}">Edit</a>
                <a class="btn btn-success" href="#/like/{{_id}}"> {{likeCounter}} likes</a>
            </div>
        </div>

        <div class="detailsIngredients">
            <h3 class="my-3 ingredient">Ingredients</h3>
            <ul>
                <li>{{Ingredients}}</li>
                <li> {{Ingredients}}</li>
                <li> {{Ingredients}}</li>
                <li>...</li>
            </ul>
        </div>
    </div>
</div>

{{> footer}}